body {
    margin: 10%;
    width: 50%;
    font: 75%/120% Arial, Helvetica, sans-serif;
}
.accordion {
    margin-left: 30%;   
    width: 40%;
    border-bottom: solid 1px #c4c4c4;
}
.accordion div>h3 {

    background:url(../images/arrow-square.gif)no-repeat right -51px; 
    color:#567abb;
    width: 93.5%;
    padding: 1% 3%;
    margin: 0;
    text-align: center;
    align: center;
    font: bold 11px sans-serif;
    border: solid 1px #c4c4c4;
    border-bottom: none;
    cursor: pointer;
}

.accordion div h3:hover {
    display: block;
    border-width: 0px;
    border-color: #FCEEB0;
    border-style: solid;
    text-decoration: none;
    padding-bottom: 3px;
    padding-top: 5px;
    _padding-left: 0;
    font: bold 11px sans-serif;
    color: black;
    text-decoration: none;
    cursor: pointer;
    min-height: 16px;
}
.accordion div h3.active {
    background-position: right 5px;
}
.accordion>div>div {
    background: #f7f7f7;
    margin: 0;
    border-left: solid 1px #c4c4c4;
    border-right: solid 1px #c4c4c4;
}
table.acord {
    padding: 0px;
    table-layout: auto;
    border-width: 3px;
    border-spacing: 0px;
    margin: auto;
    width: 100%;
    padding-bottom: 3px;
    padding-top: 5px;
}

table.acord td {
    font:bold 11px sans-serif;  
}
table.acord a {
    font:normal 11px sans-serif;
}



.accordion img {
    display: block;
    width: 100%;

}